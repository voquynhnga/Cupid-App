<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!-- Bóng -->
        <shape>
            <solid android:color="#FF266F"/> <!-- Màu bóng với độ trong suốt -->
            <corners android:radius="10dp"/> <!-- Bo góc tương ứng -->
            <padding android:left="2dp" android:top="2dp" android:right="2dp" android:bottom="2dp"/> <!-- Padding để tạo khoảng cách cho bóng -->
        </shape>
    </item>
    <item android:top="2dp" android:left="2dp"> <!-- Đặt viền lên trên bóng -->
        <shape>
            <solid android:color="@android:color/transparent"/> <!-- Nền trong suốt -->
            <stroke
                android:width="2dp"
                android:color="#FF266F"/> <!-- Đường viền màu FAB5CC -->
            <corners android:radius="14dp"/> <!-- Bo góc nếu muốn -->
        </shape>
    </item>
</layer-list>