<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@drawable/gradient_bg"
    tools:context=".AddStoryActivity">

    <!-- ImageView for displaying selected story image -->
    <ImageView
        android:id="@+id/storyImageView"
        android:layout_width="393dp"
        android:layout_height="300dp"
        android:background="#DAEFF2"
        android:contentDescription="@string/story_image"
        android:scaleType="centerCrop"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- LinearLayout for two ImageViews to align horizontally -->
    <LinearLayout
        android:id="@+id/imageButtonsLayout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/storyImageView"
        android:layout_marginTop="16dp">

        <!-- Button to choose an image from the gallery -->
        <ImageView
            android:id="@+id/addImg"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginEnd="24dp"
            android:scaleType="fitCenter"
            android:src="@drawable/add_image">









        </ImageView>

        <!-- Button to add the story -->
        <ImageView
            android:id="@+id/addStoryButton"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_marginStart="24dp"
            android:background="#A08685"
            android:src="@drawable/add" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
