<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <ImageButton
        android:id="@+id/btn_back"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/baseline_arrow_back_24"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back"
        android:layout_marginBottom="16dp"
        android:padding="12dp"/>

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:progress="90"
        android:max="100"
        android:progressTint="@color/progress_color"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Photos"
        android:textSize="24sp"
        android:textColor="@android:color/holo_red_light"
        android:gravity="center"
        android:layout_marginBottom="16dp"/>

    <LinearLayout
        android:layout_width="400dp"
        android:layout_height="380dp"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_marginBottom="18dp">

            <ImageView
                android:id="@+id/image_slot_1"
                android:layout_width="180dp"
                android:layout_height="180dp"
                android:layout_marginEnd="17dp"
                android:background="@drawable/rounded_square"
                android:contentDescription="Photo Slot 1"
                android:padding="20dp"
                android:src="@drawable/ic_add_photo" />

            <LinearLayout
                android:layout_width="150dp"
                android:layout_height="180dp"
                android:orientation="vertical"
                android:layout_marginStart="17dp">

                <ImageView
                    android:id="@+id/image_slot_2"
                    android:layout_width="138dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rounded_square"
                    android:contentDescription="Photo Slot 2"
                    android:padding="10dp"
                    android:src="@drawable/ic_add_photo"
                    android:layout_marginStart="8dp"
                    android:layout_marginBottom="10dp"
                    android:layout_gravity="center_vertical" />

                <ImageView
                    android:id="@+id/image_slot_3"
                    android:layout_width="138dp"
                    android:layout_height="80dp"
                    android:background="@drawable/rounded_square"
                    android:contentDescription="Photo Slot 3"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="10dp"
                    android:padding="10dp"
                    android:src="@drawable/ic_add_photo" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="2dp"
            android:gravity="left"
            android:layout_gravity="left"
            android:layout_marginTop="18dp">

            <ImageView
                android:id="@+id/image_slot_4"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_square"
                android:contentDescription="Photo Slot 4"
                android:padding="10dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_add_photo" />

            <ImageView
                android:id="@+id/image_slot_5"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_square"
                android:contentDescription="Photo Slot 5"
                android:padding="10dp"
                android:layout_marginStart="7dp"
                android:layout_marginEnd="7dp"
                android:src="@drawable/ic_add_photo" />

            <ImageView
                android:id="@+id/image_slot_6"
                android:layout_width="110dp"
                android:layout_height="80dp"
                android:background="@drawable/rounded_square"
                android:contentDescription="Photo Slot 6"
                android:padding="10dp"
                android:layout_marginStart="7dp"
                android:src="@drawable/ic_add_photo" />

        </LinearLayout>

    </LinearLayout>


    <Button
        android:id="@+id/btn_continue"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/button_color"
        android:text="Continue"
        android:textColor="@android:color/white"
        android:textSize="18sp"
        android:layout_marginTop="100dp"/>
</LinearLayout>
